<?xml version="1.0"?>
<robot name="servo_robot">

  <!-- Fixed base link -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.05 0.05 0.02"/></geometry>
      <material name="grey"><color rgba="0.5 0.5 0.5 1"/></material>
    </visual>
  </link>

  <!-- Servo output link -->
  <link name="servo_link">
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry><cylinder radius="0.01" length="0.1"/></geometry>
      <material name="blue"><color rgba="0.2 0.4 0.9 1"/></material>
    </visual>
  </link>

  <!-- Servo joint: range 0 to 180 degrees (0 to pi radians) -->
  <joint name="servo_joint" type="revolute">
    <parent link="base_link"/>
    <child link="servo_link"/>
    <origin xyz="0 0 0.02"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="3.14159" effort="1.0" velocity="1.0"/>
  </joint>

</robot>
